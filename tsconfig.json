{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "jsx": "react",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": false,
    "removeComments": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,

    "rootDir": "./src",
    "outDir": "./build"
  }
}
